extends layout

block content
  h1= title
  p Welcome to #{title}
  ul 
    each value in data 
      li= value.blog_txt 
  br
  form(action='/add', method='POST')
    input(type='text', name='blog_txt', value="")
    button(type='submit')
      p Add
  form(action='/delete', method='POST')
    input(type='text', name='blog_id', value="")
    button(type='submit')
      p Delete